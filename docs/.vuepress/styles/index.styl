$nprogressColor = #4081E2
$accentColor = #2068D5
$textColor = #444C60
$navbarHeight = 4rem
$contentWidth = 1024px

html,
body {
	font-family: 'DM Sans', sans-serif;
	line-height: 1.5;
	-moz-osx-font-smoothing: grayscale;
	-webkit-font-smoothing: antialiased;
	text-rendering: geometricPrecision;
	color: #444C60;
	background: #f4f4f4;
	height: 100%;
}

.theme-container.no-sidebar {
	height: 100%;
	background: #FFF;
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	overflow: auto;
}

.page {
	min-height: calc(100vh - 35px);
}

#app, .theme-container {
	height: 100%;
}

.sidebar {
	font-size: 16px;
}

a.sidebar-link {
	padding-top: 13px;
}

.sidebar-group ul.sidebar-sub-headers a.sidebar-link {
	padding-top: 13px;
}

.sidebar-group a.sidebar-link.active {
	color: #4081E2;
	border-left-color: #4081E2;
	background-color: #F3F8FA;
}

.sidebar-group.is-sub-group .sidebar-group-items a.sidebar-link.active {
	background-color: transparent;
	color: #4081E2;
	border-left-color: #4081E2;
	font-weight: 600;
}

.sidebar-group ul.sidebar-sub-headers a.sidebar-link.active {
	background-color: #FFFFFF;
}

.sidebar-group a.sidebar-link:hover {
	color: #4081E2;
}

pre {
	max-height: 400px;
	overflow: auto;
}

code {
	white-space : pre-wrap !important;
}

.circle {
    width: 130px;
    height: 130px;
    float: left;
    background-color: #000000;
    border-radius: 100px;
    margin-right: 20px;
}

.cool-table table {
	border: 0px;
}

.center {
	text-align: center;
}

.dont {
    padding-left: 40px;
    background: url(https://cloud.modyocdn.com/uploads/ede84e61-77d1-46fd-919c-fc294a8746c6/original/cancel.svg) no-repeat 0px 0px;
    min-height: 30px;
    margin-top: 10px;
}

.card {
    display: block;
    background-color: #F6F7F7;
    margin-top: 10px;
	margin-bottom: 10px;
	padding: 10px 20px 20px 20px;
}

.color-box {
	width:150px;
	text-align:center;
	padding:10px 30px 10px 30px;
}

.color-table {
	padding:20px;
	margin:0px;
	height:auto;
	overflow: visible;
}

// Table styles from theme - with higher specificity for production
.theme-default-content table,
table {
	border-collapse: collapse;
	margin: 1rem 0;
	display: block;
	overflow-x: auto;
}

.theme-default-content tr,
tr {
	border-top: 1px solid #dfe2e5 !important;
}

.theme-default-content tr:nth-child(2n),
tr:nth-child(2n) {
	background-color: #f6f8fa;
}

.theme-default-content th,
.theme-default-content td,
th, td {
	border: 1px solid #dfe2e5 !important;
	padding: .6em 1em;
}

table.no-border tr {
	border: none;
}

table.no-border tr:nth-child(2n) {
	background-color: #fff;
}

table.no-border td {
	border: none;
}

table.table-dark tr td {
	border-color: #444C60 !important;
}

// Sidebar improvements for sub-groups only (depth-1 and higher)
// Hide arrows only for sub-groups to match H2 behavior
.sidebar-group.depth-1 .sidebar-heading .arrow,
.sidebar-group.depth-2 .sidebar-heading .arrow {
	display: none !important;
}

// Active state styling for sub-group headings only when they are the actual active route
.sidebar-group.is-sub-group > .sidebar-heading.clickable.active {
	color: #4081E2 !important;
	background-color: #F3F8FA !important;
	font-weight: 600 !important;
	border-left: 0.25rem solid #4081E2 !important;
}

// Hover state for sub-group headings
.sidebar-group.depth-1 .sidebar-heading.clickable:hover,
.sidebar-group.depth-2 .sidebar-heading.clickable:hover {
	color: #4081E2 !important;
}